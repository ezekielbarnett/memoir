# Memoir Platform Environment Configuration
# Copy to .env and fill in your values

# =============================================================================
# AI / LLM APIs
# =============================================================================

# Google Gemini (primary - recommended)
GOOGLE_API_KEY=AIza...
GEMINI_MODEL=gemini-2.5-flash
# GEMINI_MODEL=gemini-2.5-pro

# OpenAI (fallback, Whisper transcription)
OPENAI_API_KEY=sk-...

# Anthropic (Claude) - alternative
ANTHROPIC_API_KEY=sk-ant-...

# Which provider to use: gemini, openai, anthropic
LLM_PROVIDER=gemini

# =============================================================================
# AWS Configuration
# =============================================================================

AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# S3 - Content storage (audio files, images, exports)
AWS_S3_BUCKET=memoir-content

# DynamoDB - Fast key-value for sessions, cache
AWS_DYNAMODB_TABLE_PREFIX=memoir_

# RDS/Aurora - PostgreSQL for relational data
DATABASE_URL=postgresql://user:pass@host:5432/memoir

# SES - Email notifications
AWS_SES_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# Application Settings
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# API server
API_HOST=0.0.0.0
API_PORT=8000

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Secret key for JWT tokens
SECRET_KEY=your-secret-key-change-in-production

# =============================================================================
# Optional Services
# =============================================================================

# Sentry for error tracking
SENTRY_DSN=

# Redis for caching/queues (or use ElastiCache on AWS)
REDIS_URL=redis://localhost:6379

# Stripe for payments
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

